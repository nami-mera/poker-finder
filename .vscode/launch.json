{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server:create_app",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "run",
                "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}